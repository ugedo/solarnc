{
	"$schema": "http://json-schema.org/schema#",
	"title": "A json schema for add_feature.py config file",
	"type": "object",
	"definitions": {
		"feature": {
			"type": "object",
			"properties": {
				"function": {"type": "string"},
				"args": {"type": "array"}
			},
			"required": ["function"]
		},
		"station": {
			"type": "object",
			"properties": {
				"name": {"type": "string"},
				"latitude": {"type": "number"},
				"longitude": {"type": "number"},
				"tzname": {"type": "string"}
			},
			"required": ["name","latitude", "longitude"]
		}
	},
	"properties": {
		"path": {"type": "string"},
		"outpath": {"type": "string"},
		"timezone": {"type": "string"},
		"features": {
			"type": "array",
			"items": {
				"$ref": "#/definitions/feature",
				"minItems": 1
			}
		},
		"skip existing": {"type": "boolean"},
		"stations": {
			"type": "array",
			"items": {
				"$ref": "#/definitions/station"
			}
		}
	},
	"required": ["path", "outpath", "timezone", "features", "skip existing",
		"stations"]
}
